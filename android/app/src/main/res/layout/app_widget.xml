<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/appwidget_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/widget_margin"
              tools:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_title"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="@string/widget_info_period"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="italic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appwidget_name_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_s2x_short"
            android:textColor="#ffffff"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/appwidget_value_sw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="24.3%"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appwidget_name_ec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_ec_short"
            android:textColor="#ffffff"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/appwidget_value_ec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="24.3%"/>

    </LinearLayout>

</LinearLayout>