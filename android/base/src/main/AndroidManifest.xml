<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lambdasoup.blockvote.base">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <provider
            android:name="com.lambdasoup.blockvote.base.data.StatsProvider"
            android:authorities="com.lambdasoup.blockvote"
            android:exported="false"
            android:syncable="false"/>

        <service
            android:name="com.lambdasoup.blockvote.base.comms.BlockvoteFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>
